{% extends 'IntexOrgBundle::layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/font-awesome/css/font-awesome.min.css')}}" type="text/css"/>
{% endblock %}

{% block namepage %}
    <h3>
        {% trans %} List of all users {% endtrans %}
    </h3>
{% endblock %}
{% block body %}
    {% if users %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>{% trans %}Last Name{% endtrans %}</th>
                <th>{% trans %}First Name{% endtrans %}</th>
                <th>{% trans %}Middle Name{% endtrans %}</th>
                <th>{% trans %}Action{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td scope="row">{{ loop.index }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.middlename }}</td>
                    <td>
                        <a href="{{ path('intex_org_user_show', { 'userId': user.id }) }}" title="{% trans %}Show user info{% endtrans %}">
                            <i class="fa fa-address-card" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{% trans %}There are no users{% endtrans %}</p>
    {% endif %}
        </div>
{% endblock %}
