{% extends 'IntexOrgBundle::layout.html.twig' %}

{% block namepage %}
    <h3>
        {% trans %} Organizations {% endtrans %}
    </h3>
{% endblock %}

{% block body %}
    {% if companies %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{% trans %} Name organization {% endtrans %}</th>
                    <th colspan="2">{% trans %}Actions{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
            {% for company in companies %}
                <tr>
                    <td scope="row">{{ loop.index }}</td>
                    <td>{{ company.name }} </td>
                    <td>
                        <a href="{{ path('intex_org_user_new',{ 'companyId': company.id })}}" title="{% trans %}Add user{% endtrans %}">
                            <i class="fa fa-user-plus" aria-hidden="true"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{  path('intex_org_company_show', { 'companyId': company.id })}}" title="{% trans %}Show company info{% endtrans %}">
                            <i class="fa fa-file-text" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{% trans %}There are no companies{% endtrans %}</p>
    {% endif %}
{% endblock %}